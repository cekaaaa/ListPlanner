<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/txtwelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to List Planner"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/bg"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtregis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register your account here"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="10dp"
                android:textColor="@color/bg"
                android:textSize="15sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:layout_marginVertical="6dp"
                app:boxBackgroundColor="@color/beige"
                app:startIconDrawable="@drawable/username"
                app:startIconTint="@color/bg">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:layout_marginVertical="6dp"
                app:boxBackgroundColor="@color/beige"
                app:startIconDrawable="@drawable/mail"
                app:startIconTint="@color/bg">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginVertical="6dp"
                app:boxBackgroundColor="@color/beige"
                app:startIconDrawable="@drawable/pass"
                app:endIconMode="password_toggle"
                app:startIconTint="@color/bg">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:layout_marginVertical="6dp"
                app:boxBackgroundColor="@color/beige"
                app:startIconDrawable="@drawable/pass"
                app:endIconMode="password_toggle"
                app:startIconTint="@color/bg">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtrepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnregis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="15dp"
                app:cornerRadius="20dp"
                android:padding="10dp"
                android:text="Register"
                android:textSize="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/bg"
                android:backgroundTint="@color/kuningterang"
                />

            <TextView
                android:id="@+id/txtor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bg"
                android:text="OR"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btngoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="20dp"
                android:padding="10dp"
                android:text="Register with google"
                app:icon="@drawable/google2"
                app:iconTint="@android:color/transparent"
                app:iconTintMode="add"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/bg"
                android:backgroundTint="@color/kuningterang"
                android:layout_marginBottom="30dp" />

            <TextView
                android:id="@+id/txtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="40dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/bg"
                android:text="Already have an account? Login"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>